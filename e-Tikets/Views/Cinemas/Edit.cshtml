@model  e_Tikets.Models.Cienme

@{
    ViewData["title"] = "Edit";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    Edit
</h1>

<h4>Cinema</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group text-center">
                <img id="Logo" class="border-info rounded-circle" />
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logo" class="control-label"></label>
                <input asp-for="Logo" class="form-control" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" asp-action="Edit" class="btn btn-primary" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>

            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>

         $(document).ready(function() {
            var output = document.getElementById('Logo');
            output.src = $("#Logo").val();
        })


        $("#Logo").on("change" ,  function() {
            var output = document.getElementById('Logo');
            output.src = $(this).val();
        })
    </script>
}