@model IEnumerable<Cienme>

@{
    ViewData["Title"] = "List Of Cienmas";
}

<style>
    tbody tr td{
        padding: 10px;
    }
</style>

<div class="row">
    <div class="col-md-10 offset-md-2 mt-5">
        <table>
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model=> model.Logo)</th>
                    <th>@Html.DisplayNameFor(model=> model.Name)</th>
                    <th>@Html.DisplayNameFor(model=> model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="test">
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" style="max-width:100px" alt="@item.Name"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=> item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=> item.Description)
                        </td>
                      
                            <td class="align-middle">
                                <a class="btn btn-outline-primary"> <i class="bi bi-pencil-square"></i> Edit </a> |
                                <a class="btn btn-outline-info"> <i class="bi bi-eye"></i> Details </a> |
                                <a class="btn btn-outline-danger"> <i class="bi bi-trash"></i> Delete </a> |

                            </td>
                        
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>